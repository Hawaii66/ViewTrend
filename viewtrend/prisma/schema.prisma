generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
	id Int @id @default(autoincrement())
	username String
	email String
	coins Int
}

model Video {
	id Int @id @default(autoincrement())
	reference String
	title String
	description String @db.LongText
	publishDate DateTime
	image String
}

model View {
	id Int @id @default(autoincrement())
	count Int
	time DateTime @default(now())
	video Int
}

model Contract {
	id Int @id @default(autoincrement())
	user Int
	video Int
	targetViews Int
	targetTime DateTime
	coins Int
}